<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/readUserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToQR"
            android:text="Kod Okuyucuyu Aç" />

        <Button
            android:id="@+id/manualDrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToManualDrive"
            android:text="KENDİN SÜR" />

        <Button
        android:id="@+id/lineFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToLineFollowing"
        android:text="Otomatik Çizgi Takibi" />

        <Button
            android:id="@+id/roomba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToRoomba"
            android:text="Roomba" />

        <Button
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkConnectionStatus"
            android:text="Check Connection Status" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>