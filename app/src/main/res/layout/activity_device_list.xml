<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".DeviceListActivity"
    android:background="#38c6ff">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/morfobot_nobg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="morf'a bağlan"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/raleway_blackitalic"
        android:textSize="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff5400"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eşlenmiş cihazları göster"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_blackitalic"
        android:textSize="@dimen/_15sdp"
        android:textColor="#38c6ff"
        android:backgroundTint="#ffd125"
        android:backgroundTintMode="multiply"
        />

    <ListView
        android:background="#aaffffff"
        android:backgroundTint="#aaffffff"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/button"
        />


</RelativeLayout>
